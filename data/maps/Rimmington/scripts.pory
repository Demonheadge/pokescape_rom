            //HIDE HOUSE PARTIES
            removeobject (OBJ_EVENT_ID_ZEZIMA)
            removeobject (OBJ_EVENT_ID_BOATY)
            removeobject (OBJ_EVENT_ID_DEMONHEADGE)
            removeobject (OBJ_EVENT_ID_HYPERSTAN)
            removeobject (OBJ_EVENT_ID_TEHNOOBSHOW)
