script NPC_MUDSKIPPERPOINT_NPC_1 { 
	lock
	faceplayer
    namebox("QUESTER")
	msgbox(format("I heard you could get Yellow Flippers from the Mogres.\pDo you think they would give me a pair if I ask nicely?"))
    hidenamebox
    release
	end
}

script NPC_MUDSKIPPERPOINT_FAIRY { 
	lock
	faceplayer
    namebox("FAIRY")
	msgbox(format("I am not sure why, but our Fairy Ring network seems to be down."))
    hidenamebox
    release
	end
}

script BATTLE_MUDSKIPPERPOINT_SLAYER{
    trainerbattle_single(TRAINER_ROUTE11_GRACEFUL, format("No!\pI left my explosive potions at the bank!"),format("This is such an xp waste!"))
    msgbox(format("How am I meant to challenge the Morges to a battle without explosive potions and a full team of fainted monsters."))
    release
}

script BATTLE_MUDSKIPPERPOINT_FISHER_1{
    trainerbattle_single(TRAINER_ROUTE11_GRACEFUL, format("Oh!\pLooks like I have snagged a big one in my net!"),format("Aww it got away…"))
    msgbox(format("I heard that there was some sort of device that allows you to dive under the water.\pWhat I'd give to see how the Mudskippers live!"))
    release
}

script BATTLE_MUDSKIPPERPOINT_FISHER_2{
    trainerbattle_single(TRAINER_ROUTE11_GRACEFUL, format("Do you know why they call this place Mudskipper Point?"),format("I am serious, why do they call this place Mudskipper Point?"))
    msgbox(format("Oh now I get it.\pIt is because of all the Mudskippers right?"))
    release
}










