script LUMBRIDGESWAMP_CANDLESELLER
{
	lock
	faceplayer
	msgbox(format("I wouldn't go down there without a light source.\pIt's dangerous!"))
    checkitem(ITEM_LANTERN, 1)
        if (!var(VAR_RESULT)){
            msgbox(format("Look.. If you are serious about going down there, take this."))
            giveitem(ITEM_LANTERN)
            msgbox(format("Be careful down there."))
            release
            end
        }
        else {
            release
            end
        }
	release
	end
}