				setwildbattle(SPECIES_HAND_CREEPING_FORM, 10, ITEM_NONE)
				dowildbattle
				//hidenamebox
				release
				end
			case 2: 
				//namebox("2")
				msgbox(format("You found an item!"))
				release
				//hidenamebox
				end
